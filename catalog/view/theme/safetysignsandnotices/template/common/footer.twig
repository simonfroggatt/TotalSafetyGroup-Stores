<footer>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="row">
                    {% if informations %}
                        <div class="col-4">
                            <h5>{{ text_information }}</h5>
                            <ul class="list-unstyled">
                                {% for information in informations %}
                                    <li><a href="{{ information.href }}">{{ information.title }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    <div class="col-4">
                        <h5>{{ text_service }}</h5>
                        <ul class="list-unstyled">
                            <li><a href="{{ contact }}">{{ text_contact }}</a></li>
                            <li><a href="{{ return }}">{{ text_return }}</a></li>
                            <li><a href="{{ sitemap }}">{{ text_sitemap }}</a></li>
                        </ul>
                    </div>
                    <div class="col-4">
                        <h5>{{ text_account }}</h5>
                        <ul class="list-unstyled">
                            <li><a href="{{ account }}">{{ text_account }}</a></li>
                            <li><a href="{{ order }}">{{ text_order }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6">
              <div class="row">
                <div class="col-6 col-lg-3">
                    <ul class="list-unstyled">
                        <li>
                            <script type="text/javascript"
                                    src="https://sealserver.trustwave.com/seal.js?code=e0885ece86954c40b85381c8a8c874b6"></script>
                        </li>
                    </ul>
                </div>
                <div class="col-6 col-lg-3">
                    <ul class="list-inline payment-methods text-center payment-methods-o payment-methods-1_5">
                        <li class="list-inline-item"><i class="pf pf-mastercard-alt"></i></li>
                        <li class="list-inline-item"><i class="pf pf-visa"></i></li>
                        <li class="list-inline-item"><i class="pf pf-maestro-alt"></i></li>
                        <li class="list-inline-item"><i class="pf pf-american-express"></i></li>
                        <li class="list-inline-item"><i class="pf pf-paypal"></i></li>
                    </ul>
                </div>

                <div class="col-6 col-lg-1 text-center">
                    <img src="/image/3rdpartylogo/fsb.svg" height="50" alt="FSB logo" class="img-responsive">
                </div>
                <div class="col-6 col-lg-3 text-center">
                    <img src="/image/3rdpartylogo/comodo-security.svg" height="50" alt="comodo logo" class="img-responsive">
                </div>
              </div>
            </div>
          <div class="col-12 text-center pb-2">
            <img src="/image/3rdpartylogo/mib_living_wage.svg" class="img-responsive">
          </div>
        </div>
        <p class="text-center">{{ powered }}</p>
    </div>
    <a id="back-to-top" href="#" class="btn btn-light btn-lg back-to-top" role="button"><i
                class="fas fa-chevron-up"></i></a>
</footer>
{% for style in styles %}
    <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
{% endfor %}
{% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
