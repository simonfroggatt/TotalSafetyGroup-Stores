{{ header }}
<div id="blog-content" class="container">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
    <div class="row">
        <div id="content" class="col-12">


<div class="row"> 
    <div class="col d-flex justify-content-center">
    <img src="{{ blog_image }}" alt="" class="top-banner">
    </div>
</div>


<div class="row pt-3">
        <div class="title">
<h1>{{ blog_title }}
</h1>
    </div>
</div>

<div class="row pt-3">
    <div class="col d-flex justify-content-center">
        <div class="text">
        {{ blog_content }}
        </div>
    </div>
</div>


<div class="row pt-3"> 
    <div class="col">
        <a href="{{ blog_back }}" class="btn btn-primary">Go Back</a>
    </div>
</div>

        </div>
    </div>
</div>
{{ footer }}