        <div>
            <h4>Help & Settings</h4>
            <ul>
                {% if logged %}
                    <li><a href="{{ account }}">Your Account</a></li>
                    <li><a href="{{ logout }}">Sign Out</a></li>
                {% else %}
                    <li><a href="{{ login }}">Login</a></li>
                {% endif %}
                <li><a href="{{ contact }}">Delivery</a></li>
                <li><a href="{{ contact }}">Contact Us</a></li>
            </ul>
        </div>
        <hr>
        <div>
            <h4>Shop by Category</h4>
            {{ categories }}
        </div>
    </div>
</div>

