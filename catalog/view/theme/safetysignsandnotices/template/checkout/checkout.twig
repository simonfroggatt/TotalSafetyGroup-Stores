{{ header }}

<script src="https://js.stripe.com/v3/"></script>

<div id="checkout-checkout" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
    {% if payment_error %}
        <div class="alert alert-danger" role="alert" id="checkout_payment_error">
            {{ payment_error }}
        </div>
    {%  endif %}
    <div class="d-none mt-2" aria-hidden="true" id="checkout_alert" role="alert">
        <div id="checkout_alert_contents">
        </div>
        <button type="button" class="btn-close" id="alert_close_btn" aria-label="Close" data-dismiss="alert"></button>
    </div>

  <div class="row">{{ column_left }}
    <div id="content" class="col-sm-12">{{ content_top }}
        <h2 class="d-none d-md-block">Checkout</h2>
        <div class="multi_step_form">
            <div id="msform">
                <!-- progressbar -->
                <ul id="progressbar">
                    <li class="active">Account</li>
                    <li>Address Details</li>
                    <li>Shipping</li>
                    <li>Check Order</li>
                    <li>Payment</li>
                </ul>

                <!-- sections -->
                <section id="account" class="active">
                    {{ section_account }}
                </section>
                <section id="address">
                    {{ section_address }}
                </section>
                <section id="shipping">
                    {{ section_shipping }}
                </section>
                <section id="confirmation">
                    {{ section_check }}
                </section>
                <section id="payment">
                    <div class="row justify-content-md-center">
                        <div class="col col-12 col-lg-8" id="checkout_payment_methods">
                        </div>
                    </div>
                    <button type="button" class="action-button previous previous_button">Back</button>
                </section>
            </div>
        </div>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" id="overlayCheckout" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-body text-center">
                <h3>Setting up payment methods...won't be a sec</h3>
                <div><img src="/catalog/view/theme/safetysignsandnotices/image/loader_balls.svg"></div>
            </div>
        </div>
    </div>
</div>



