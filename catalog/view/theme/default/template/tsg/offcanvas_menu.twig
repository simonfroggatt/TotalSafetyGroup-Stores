<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSSAN" aria-labelledby="offcanvasSSAN">
    <div class="offcanvas-header">
        <div id="user-logo"><h3><i class="fas fa-user "></i>   Hello,
        {% if logged %}
            {{customer_name}}
        {% else %}
                 <a href="{{ login }}">Login</a>
        {% endif %}
            </h3></div>

        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
