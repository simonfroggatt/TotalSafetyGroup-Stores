<header>
    <div class="full-width-header">
        <div class="container">
            <div class="row">
                <div class="col-8 col-sm-5 col-md-4 col-lg-3">
                    <div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
                            <h1><a href="{{ home }}">{{ name }}</a></h1>
                        {% endif %}
                    </div>
                </div>
                <div class="col-4 d-sm-none " id="top-links">
                    <div class="col">
                        <ul class="nav flex-column flex-row-reverse">
                            <li class="nav-item">
                                <a class="nav-link" href="tel:{{ telephone }}"><i class="fa fa-phone"></i> {{ telephone }}333</a>
                            </li>
                            {% if logged %}
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-user"></i> Hi, {{ customer_name }}
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="{{ account }}">{{ text_account }}</a></li>
                                        <li><a class="dropdown-item" href="{{ order }}">{{ text_order }}</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ logout }}">{{ text_logout }}</a></li>
                                    </ul>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ login }}"><i class="fa fa-user"></i> {{ text_login }}</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <div class="col-sm-7 col-md-8 col-lg-9" id="top-links">
                    <div class="row d-none d-sm-block">
                        <div class="col">
                            <ul class="nav justify-content-end">
                                <li class="nav-item">
                                    <a class="nav-link" href="tel:{{ telephone }}"><i class="fa fa-phone"></i> {{ telephone }}</a>
                                </li>
                                {% if logged %}
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-user"></i> Hi, {{ customer_name }}
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" href="{{ account }}">{{ text_account }}</a></li>
                                            <li><a class="dropdown-item" href="{{ order }}">{{ text_order }}</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="{{ logout }}">{{ text_logout }}</a></li>
                                        </ul>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ login }}"><i class="fa fa-user"></i> {{ text_login }}</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ search }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
        {{ menu_tsg }}
    </div>
</header>




