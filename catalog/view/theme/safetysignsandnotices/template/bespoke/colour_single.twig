<div class="container-fluid">
    <div class="form-group row">
        <label class="col-sm-2 col-md-2 col-form-label">Colour</label>
        <div class="col-sm-10 col-md-10 ">
            <div class="row">
                {% for colour_index, colour_def in colours  %}
                    <div class="col-3 color-thumb {% if init_colour == colour_index %} colour-selected {% endif %}" id="bg-color-{{ colour_index }}" style="background-color: {{ colour_def.colour }}; color: {{ colour_def.text_colour }};"
                         data-background-color={{ colour_def.colour }} data-text-color={{ colour_def.text_colour }} data-color-id="{{ colour_index }}"></div>
                {% endfor %}
            </div>
        </div>
    </div>
   <div class="form-group row">
        <label class="col-sm-2 col-md-2 col-form-label">Border</label>
        <div class="col-sm-10 col-md-10 ">
            <div class="row">
                {% for border_index, border_def in borders  %}
                    <div class="col-sd-4 col-md-4 color-border {% if init_border == border_index %} colour-selected {% endif %}" id="border-color-{{ border_def.nanme }}" style="background-color: {{ border_def.border_colour }}; color:{{ border_def.text_colour }}"
                         data-color='none' data-hasborder='{{ border_def.border }}' data-border-id="{{ border_index }}">{{ border_def.name|upper }}</div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
