<script type="application/ld+json">
    {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
    {% for breadcrumb in breadcrumbs %}
		{
			"@type": "ListItem",
			"position": {{ loop.index }},
			"item": {
			"@id": "{{ breadcrumb.href }}",
			"name": "{{ breadcrumb.text }}"
		}
		}{% if not loop.last %},{% endif %}
    {% endfor %}
    ]
}
</script>