{{ header }}
<div id="account-account" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}



      <h2>{{ text_my_account }}</h2>
      <ul>

<div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
    <div class="card text-center ">
        <div class="card-body">
          <h2 class="card-title"><a href="{{ edit }}"><i class="fa-thin fa-pen-to-square"></i></a></h2>
          <br>
          <p class="card-text">Edit you account information</p>
          <a href="{{ edit }}" class="btn btn-success btn-lg btn-block">Go</a>
        </div>
      </div>
    </div>
    <div class="col">
        <div class="card text-center ">
            <div class="card-body">
              <h2 class="card-title"><a href="{{ password }}"><i class="fa-thin fa-key"></i></a></h2>
                <br>
              <p class="card-text">Change you password</p>
              <a href="{{ password }}" class="btn btn-success btn-lg btn-block">Go</a>
            </div>
          </div>
        </div>
        <div class="col">
            <div class="card text-center ">
                <div class="card-body">
                  <h2 class="card-title"><a href="{{ address }}"><i class="fa-thin fa-book"></i></a></h2>
                  <br>
                  <p class="card-text">Modify your address book entries</p>
                  <a href="{{ address }}" class="btn btn-success btn-lg btn-block">Go</a>
                </div>
              </div>
            </div>
            </div>

      </ul>
      {% if credit_cards %}
      <h2>{{ text_credit_card }}</h2>
      <ul class="list-unstyled">
        {% for credit_card in credit_cards %}
        <li><a href="{{ credit_card.href }}">{{ credit_card.name }}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
      <h2>{{ text_my_orders }}</h2>
      <ul>
          <div class="card text-center" style="width: 25rem;">
            <div class="card-body">
              <h2 class="card-title"><a href="{{ address }}"><i class="fa-thin fa-clock-rotate-left"></i></a></h2>
            <br>
          <p class="card-text">View your order history</p>
        <a href="{{ order }}" type="button" class="btn btn-success btn-lg btn-block">Go</a>
          </div>
      </div>
      </ul>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}